<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= portfolio.name %> - <%= portfolio.title %></title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo"><%= portfolio.name %></div>
            <div class="nav-links">
                <a href="#about">About</a>
                <a href="#skills">Skills</a>
                <a href="#experience">Experience</a>
                <a href="#projects">Projects</a>
                <a href="#volunteering">Leadership</a>
            </div>
        </div>
    </nav>

    <header class="hero">
        <div class="hero-content">
            <h1><%= portfolio.name %></h1>
            <h2><%= portfolio.title %></h2>
            <p class="location"><i class="fas fa-map-marker-alt"></i> <%= portfolio.location %></p>
            <p><%= portfolio.summary %></p>
            <div class="hero-buttons">
                <a href="mailto:<%= portfolio.email %>" class="btn primary"><i class="fas fa-envelope"></i> Contact</a>
                <a href="<%= portfolio.linkedin %>" class="btn secondary" target="_blank"><i class="fab fa-linkedin"></i> LinkedIn</a>
                <a href="<%= portfolio.github %>" class="btn secondary" target="_blank"><i class="fab fa-github"></i> GitHub</a>
                <a href="tel:<%= portfolio.phone %>" class="btn secondary"><i class="fas fa-phone"></i> Call</a>
            </div>
        </div>
        <div class="hero-bg"></div>
    </header>

    <main>
        <section id="about" class="section">
            <div class="container">
                <h2><i class="fas fa-user"></i> About Me</h2>
                <div class="about-content">
                    <p><%= portfolio.summary2 %></p>
                    <div class="certifications">
                        <h3>Certifications</h3>
                        <% portfolio.certifications.forEach(cert => { %>
                            <span class="cert-badge"><i class="fas fa-certificate"></i> <%= cert %></span>
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <section id="skills" class="section alt">
            <div class="container">
                <h2><i class="fas fa-cogs"></i> Technical Skills</h2>
                <div class="skills-container">
                    <div class="skill-box">
                        <% portfolio.skills.forEach(skill => { %>
                            <span class="skill"><%= skill %></span>
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <section id="experience" class="section">
            <div class="container">
                <h2><i class="fas fa-briefcase"></i> Experience</h2>
                <div class="timeline">
                    <% portfolio.experience.forEach(job => { %>
                        <div class="timeline-item">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <h3><%= job.title %></h3>
                                <h4><%= job.company %></h4>
                                <span class="duration"><%= job.duration %></span>
                                <% if (job.location) { %>
                                    <span class="job-location"><i class="fas fa-map-marker-alt"></i> <%= job.location %></span>
                                <% } %>
                                <p><%= job.description %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section id="projects" class="section alt">
            <div class="container">
                <h2><i class="fas fa-project-diagram"></i> Featured Projects</h2>
                <div class="projects-grid">
                    <% portfolio.projects.forEach(project => { %>
                        <div class="project-card">
                            <div class="project-header">
                                <h3><%= project.name %></h3>
                                <% if (project.github && project.github !== '#') { %>
                                    <a href="<%= project.github %>" target="_blank"><i class="fab fa-github"></i></a>
                                <% } else { %>
                                    <i class="fas fa-code"></i>
                                <% } %>
                            </div>
                            <% if (project.duration) { %>
                                <p class="project-duration"><i class="fas fa-calendar"></i> <%= project.duration %></p>
                            <% } %>
                            <p class="project-tech"><i class="fas fa-tools"></i> <%= project.tech %></p>
                            <p><%= project.description %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section id="volunteering" class="section">
            <div class="container">
                <h2><i class="fas fa-hands-helping"></i> Leadership & Volunteering</h2>
                <div class="timeline">
                    <% portfolio.volunteering.forEach(role => { %>
                        <div class="timeline-item">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <h3><%= role.title %></h3>
                                <h4><%= role.organization %></h4>
                                <span class="duration"><%= role.duration %></span>
                                <p><%= role.description %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>

        <section id="education" class="section alt">
            <div class="container">
                <h2><i class="fas fa-graduation-cap"></i> Education</h2>
                <div class="education-grid">
                    <% portfolio.education.forEach(edu => { %>
                        <div class="education-card">
                            <h3><%= edu.degree %></h3>
                            <h4><%= edu.institution %></h4>
                            <span class="duration"><%= edu.duration %></span>
                            <p class="grade"><%= edu.grade %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 <%= portfolio.name %>. Built with Node.js & Docker</p>
        </div>
    </footer>
</body>
</html>